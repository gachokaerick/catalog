<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.5.xsd">
    <!--
        Added the constraints for entity CatalogItem.
    -->
    <changeSet id="20220225095039-1" author="jhipster">

        <dropUniqueConstraint tableName="catalog_item"
                              constraintName="ux_catalog_item__catalog_brand_id"/>

        <dropUniqueConstraint tableName="catalog_item"
                              constraintName="ux_catalog_item__catalog_type_id"/>

    </changeSet>

    <changeSet id="20220225095039-2" author="jhipster">

        <dropForeignKeyConstraint baseTableName="catalog_item"
                                  constraintName="fk_catalog_item__catalog_brand_id"/>

        <dropForeignKeyConstraint baseTableName="catalog_item"
                                  constraintName="fk_catalog_item__catalog_type_id"/>

    </changeSet>

    <changeSet id="20220225095039-3" author="jhipster">

        <addForeignKeyConstraint baseColumnNames="catalog_brand_id"
                                 baseTableName="catalog_item"
                                 constraintName="fk_catalog_item__catalog_brand_id"
                                 referencedColumnNames="id"
                                 referencedTableName="catalog_brand"/>

        <addForeignKeyConstraint baseColumnNames="catalog_type_id"
                                 baseTableName="catalog_item"
                                 constraintName="fk_catalog_item__catalog_type_id"
                                 referencedColumnNames="id"
                                 referencedTableName="catalog_type"/>

    </changeSet>

</databaseChangeLog>
