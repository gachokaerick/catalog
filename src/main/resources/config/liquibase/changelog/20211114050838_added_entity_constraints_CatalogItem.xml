<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.5.xsd">
    <!--
        Added the constraints for entity CatalogItem.
    -->
    <changeSet id="20211114050838-2" author="jhipster">

        <addForeignKeyConstraint baseColumnNames="catalog_brand_id"
                                 baseTableName="catalog_item"
                                 constraintName="fk_catalog_item__catalog_brand_id"
                                 referencedColumnNames="id"
                                 referencedTableName="catalog_brand"/>

        <addForeignKeyConstraint baseColumnNames="catalog_type_id"
                                 baseTableName="catalog_item"
                                 constraintName="fk_catalog_item__catalog_type_id"
                                 referencedColumnNames="id"
                                 referencedTableName="catalog_type"/>
    </changeSet>

    <changeSet id="20220317073514-1" author="jhipster">

        <addColumn tableName="catalog_item">
            <column name="catalog_brand_id_2" type="bigint"/>
        </addColumn>

        <update tableName="catalog_item">
            <column name="catalog_brand_id_2" type="bigint" valueComputed="catalog_brand_id"/>
        </update>

        <addNotNullConstraint tableName="catalog_item" columnName="catalog_brand_id_2" />

        <dropColumn columnName="catalog_brand_id" tableName="catalog_item"/>

        <renameColumn tableName="catalog_item" oldColumnName="catalog_brand_id_2" newColumnName="catalog_brand_id"/>

    </changeSet>

    <changeSet id="20220317073514-2" author="jhipster">

        <addColumn tableName="catalog_item">
            <column name="catalog_type_id_2" type="bigint"/>
        </addColumn>

        <update tableName="catalog_item">
            <column name="catalog_type_id_2" type="bigint" valueComputed="catalog_type_id"/>
        </update>

        <addNotNullConstraint tableName="catalog_item" columnName="catalog_type_id_2" />

        <dropColumn columnName="catalog_type_id" tableName="catalog_item"/>

        <renameColumn tableName="catalog_item" oldColumnName="catalog_type_id_2" newColumnName="catalog_type_id"/>

    </changeSet>
</databaseChangeLog>
